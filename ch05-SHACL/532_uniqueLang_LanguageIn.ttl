:CountryShape a sh:NodeShape ;
  sh:targetClass :Country ;
  sh:property [
    sh:path       skos:prefLabel ;
    sh:minCount   1 ;
    sh:uniqueLang true ;
    sh:languageIn ("en" "es") ;
  ] . 


