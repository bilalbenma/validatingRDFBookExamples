:DirectPersonSubClass a sh:NodeShape ;
 sh:targetClass :DirectPersonSubClass ;
 sh:property [ sh:path rdfs:subClassOf ;
  sh:hasValue :Person ;
 ] ;
 sh:property [ sh:path ( rdfs:subClassOf [sh:oneOrMorePath rdfs:subClassOf] ) ;
  sh:maxCount 0
 ] ;
 .
 
:Teacher rdfs:subClassOf :Person .
:Assistant rdfs:subClassOf :Teacher .
:Both rdfs:subClassOf :Person ;
  rdfs:subClassOf :Teacher .
 
:Assistant a :DirectPersonSubClass .
:Teacher a :DirectPersonSubClass .
:Both a :DirectPersonSubClass .
