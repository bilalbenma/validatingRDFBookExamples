@prefix dash: <http://datashapes.org/dash#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix : <http://www.example.org/> .

:Person a sh:NodeShape;
 sh:targetClass :Person ;
 sh:and (
  [ sh:or (
   [ sh:path schema:name ; sh:minCount 1; sh:maxCount 1 ; sh:datatype xsd:string ]
   [ sh:path foaf:name ; sh:minCount 1; sh:maxCount 1; sh:datatype xsd:string  ]
  ) ]
  [ sh:path schema:homePage ; 
    sh:minCount 1; sh:maxCount 1; sh:nodeKind sh:IRI 
  ]
 ) .
 
:NotPerson a sh:NodeShape, rdfs:Class ;
 sh:not :Person . 
 
:alice a :Person; 
  schema:name "Alice" ;
  schema:homePage :AliceWeb 
  . 
  
:bad1 a :NotPerson; 
  schema:name "Alice" ;
  schema:homePage "no"
  .  
  
:bad2 a :NotPerson; 
  schema:name 23 ;
  schema:homePage :AliceWeb
  .    
  
:bob a :Person; 
  foaf:name "Robert" ;
  schema:homePage :BobWeb
  .      
  
:bad3 a :NotPerson; 
  foaf:name "Robert" ;
  schema:homePage "no" 
  .  